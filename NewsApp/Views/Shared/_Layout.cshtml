<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
</head>
<body ng-app="newsApp" ng-cloak >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pressford Consulting", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Latest News", "News", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Publisher", "Publish", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <header class="home-page-header">
        <div class="container">
            <div class="site-heading">
                <h1>Pressford Consulting</h1>
                <hr class="small">
                <span class="sub-heading">Staff Portal</span>
            </div>
            
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
   
      
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="">
                    <div class="social-media">
                        <ul>
                            <li>
                                <a href='mailto:webmaster@example.com'><img alt="email link" src="~/content/img/mail.svg" /></a>
                            </li>
                            <li>
                                <a href='http://facebook.com'><img alt="facebook link" src="~/content/img/facebook.svg" /></a>
                            </li>
                            <li>
                                <a href='http://twitter.com'><img alt="twitter link" src="~/content/img/twitter.svg" /></a>
                            </li>
                        </ul>
                        
                    </div>
                    <p class="copyright">Copyright © Pressford Consulting 2016</p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>