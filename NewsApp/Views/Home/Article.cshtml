<h1>Article</h1>
<div class="row">
    <div class="col-md-12">
        <div id="article-container">

        </div>
    </div>
</div>



@section Scripts
{
    <script type="text/javascript">
        var loc = window.location.pathname.split('/');
        var id = loc[loc.length - 1];
        var uri = '../../api/article/' + id;
        $(document).ready(function () {
            var articleContainer = $('#article-container');
            $.getJSON(uri)
                .done(function (data) {
                    articleContainer.append(
                          "<article><header><h1>"
                               + data.title + "</h1><p class='time'>Published: <time pubdate datetime='"
                               + data.publishedAgo + "'>"
                               + data.publishedAgo
                               + "</time></p></header><p>"
                               + data.body
                               + "</p><p>"
                               + "<span class='likes'>"
                               + data.likes + "</span></p><input class='likeCheck' type='checkbox'></input></article>");
              
                });
        });
    </script>

}
